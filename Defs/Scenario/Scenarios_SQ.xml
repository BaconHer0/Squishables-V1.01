<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ScenarioDef>
    <defName>SQGoForth</defName>
    <label>Squishables Go Forth!</label>
    <description>You have been sent forth to establish a Squishable settlement. May your lives be long and your cuteness become legend.</description>
    <scenario>
      <summary>Four Squishables out in the wild - a unique kind of difficulty</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>PlayerSquish</factionDef>
      </playerFaction>
      <parts>

        <!-- Config pages -->
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>4</pawnCount>
          <pawnChoiceCount>10</pawnChoiceCount>
        </li>

        <!-- Player starting stuff spawn method-->
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>DropPods</method>
          <visible>true</visible>		  
        </li>

        <!-- Player starting things -->
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Silver</thingDef>
          <count>600</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MealSurvivalPack</thingDef>
          <count>50</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MedicineIndustrial</thingDef>
          <count>30</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>ComponentIndustrial</thingDef>
          <count>30</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Gun_Revolver</thingDef>
		  <count>2</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MeleeWeapon_Knife</thingDef>
          <stuff>Plasteel</stuff>
        </li>
		<li Class="ScenPart_StartingThing_Defined">
			<def>StartingThing_Defined</def>
			<thingDef>MeleeWeapon_Ikwa</thingDef>
			<stuff>Steel</stuff>
		</li>		
				<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Apparel_AdvancedHelmet</thingDef>
					<stuff>Plasteel</stuff>
        </li>
		
				<li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Bed</thingDef>
					<stuff>Plasteel</stuff>
					<count>4</count>
        </li>
		
		
        <!-- Scatter some things near player start -->
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>Steel</thingDef>
          <count>150</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>300</count>
        </li>      

        
		<!-- Game start dialog -->
		<li Class="ScenPart_GameStartDialog">
		<def>GameStartDialog</def>
		<text>The Collective of Squishables have decided it was time to go forth into the wilds and establish a new colony. Your group was chosen for this sacred task - to bring forth cuteness into new lands! </text>
		<closeSound>GameStartSting</closeSound>
		</li>
        
      </parts>
    </scenario>
  </ScenarioDef>




</Defs>
